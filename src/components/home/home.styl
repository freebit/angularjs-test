home
  position relative
  
  h1
    margin 0
    padding-bottom 3px
    border-bottom 1px solid #f0f0f0

  main
    position relative
    padding 0 16px

  ul
    position relative
    padding 0
    list-style disc
    list-style-position inside

    li
      position relative
      display flex
      justify-content space-between
      box-sizing border-box
      padding 5px 9px

      &.even
        background-color lighten(green, 9%)


      .delete-item
        display block
        padding 0 3px
        border none
        font-size 1rem
        color #ffffff

        background-color transparent
        cursor pointer



 .search-section
   position relative
   margin-top 16px

  .search-info
    position relative
    min-height 18px
    margin-top 16px

    .caption
      color lighten(green, 30%)  

  .filter-results
    position relative
    display flex
    margin-top 16px

    
    .filter
      position relative
      cursor pointer
      user-select none
      user-select -webkit-user-select

      .caption
        font-size .8rem

      
      .icon
        position relative
        display inline-block
        width 18px
        height 18px
        margin-right 3px
        font-size .8rem

        border-radius 50%
        background-color darken(green, 20%)

        &:before
          display block
          width 100%
          height 100%
          text-align center
          line-height 1.4

      &.asc .icon:before
        content:'\2193' 

      &.desc .icon:before
        content:'\2191'  
