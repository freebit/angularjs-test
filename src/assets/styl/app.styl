@import './variables.styl'

body
  padding 0
  margin 0

  font-size 16px

  color #fff
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  
.app
  position relative
  box-sizing border-box
  min-height "calc(100vh - %s)" % $navBarHeight 
  margin-top $navBarHeight
  background-color green
  overflow hidden

.navbar__top
  position fixed
  display block
  box-sizing border-box
  top 0
  left 0
  right 0
  height $navBarHeight
  padding 0 16px
  background-color orange

  nav
    display block
    height 100%
    width 100%
    margin 0

  ul
    position relative
    display flex
    height 100%

    padding 0
    margin 0
    list-style none

    li
      position relative
      height 100%
      margin-right .5rem

      a
        display flex
        height 100%
        justify-content center
        align-items center
        font-size .85rem
        color #fff

        &:hover
          text-decoration none
      

header
  position relative
  display block
  padding 16px

  h1
    position relative
    margin 0
    font-size 1.3rem

    font-weight 400
    